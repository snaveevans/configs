# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"

ZSH_THEME="spaceship"
ZSH_CUSTOM=~/.oh-my-zsh/custom

plugins=(
  autojump
  brew
  fast-syntax-highlighting
  fzf
  fzf-tab
  git
  npm
  nvm
  ripgrep
  tmux
  yarn
  zsh-autosuggestions
)

source $ZSH/oh-my-zsh.sh

# if type brew &>/dev/null; then
#   FPATH=$(brew --prefix)/share/zsh/site-functions:$FPATH
# fi

# source /usr/local/share/zsh-autosuggestions/zsh-autosuggestions.zsh

function _re-source () {
  source ~/.zshrc
  source ~/.zshenv
  echo "reloaded zsh config"
}
zle -N _re-source

function _kill-port () {
  process_id="$(lsof -P -i TCP -s TCP:LISTEN | fzf -m | awk '{print $2}')"
  if [[ -z process_id ]] then
    return
  fi
  kill -9 "$process_id"
}
zle -N _kill-port

# User configuration
unsetopt share_history

bindkey '^ ' autosuggest-accept
bindkey '^h' backward-char
bindkey '^l' forward-char
bindkey '^b' backward-word
bindkey '^w' forward-word
bindkey '^e' _re-source
bindkey '^ko' _kill-port

bindkey -s '^l' 'cd ~/workspace/octanner/$(ls ~/workspace/octanner | fzf)^M'
bindkey -s '^g' '$(git branch | fzf)^M'
bindkey -s '^o' 'nvim^M'

