set-option -g default-shell $SHELL

unbind C-b
set-option -g prefix 'C-a'

set -sg escape-time 0

# reload config
unbind r
bind r source-file ~/.tmux.conf \; display "Reloaded ~/.tmux.conf"

bind q kill-session

# split panes
unbind v
unbind h

unbind % # Split vertically
unbind '"' # Split horizontally

bind v split-window -h -c "#{pane_current_path}"
bind b split-window -v -c "#{pane_current_path}"

unbind d
unbind s
unbind x
unbind c

# navigate panes
bind d select-pane -L
bind s select-pane -D
bind x select-pane -U
bind c select-pane -R

# more history
set -g history-limit 100000

unbind e
unbind n  #DEFAULT KEY: Move to next window
unbind w  #DEFAULT KEY: change current window interactively

bind e command-prompt "rename-window '%%'"
bind w new-window -c "#{pane_current_path}"

set -g base-index 1
set-window-option -g pane-base-index 1

# forget the find window.  That is for chumps
bind-key -r f run-shell "tmux neww ~/.local/bin/tmux-sessionizer"

bind-key -r h run-shell "~/.local/bin/tmux-sessionizer ~/workspace/octanner/prism-ui"
bind-key -r o run-shell "~/.local/bin/tmux-sessionizer ~/.dotfiles"
bind-key -r k run-shell "~/.local/bin/tmux-sessionizer ~/workspace/octanner/media-library"
bind-key -r l run-shell "~/.local/bin/tmux-sessionizer ~/workspace/octanner/celebrationsui"
bind-key -r n run-shell "~/.local/bin/tmux-sessionizer ~/notes"
